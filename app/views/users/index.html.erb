<h1>Users list</h1>
Right now we have <%= pluralize(@users.count, "user") %>
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Nr</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do |user, id|%>
      <%= render partial: 'users', locals: { user: user, id: id } %>
    <% end %>
  </tbody>
</table>

<% if user_signed_in? %>
  <%= link_to 'Edit', edit_user_registration_path, class: 'btn btn-default' %>
  <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'btn btn-default' %>
<% else %>
  <%= link_to 'Log in', new_user_session_path, class: 'btn btn-default'  %>
  <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-default'  %>
<% end %>
